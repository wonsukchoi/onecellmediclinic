# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# For Edge Functions (server-side)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS Configuration (optional - for appointment reminders)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration (optional)
SUPABASE_STORAGE_BUCKET=gallery-images
MAX_FILE_SIZE=10MB

# Development Configuration
NODE_ENV=development
VITE_API_URL=http://localhost:54321/functions/v1

# Production Configuration (uncomment for production)
# NODE_ENV=production
# VITE_API_URL=https://your-project.supabase.co/functions/v1